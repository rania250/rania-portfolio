  <rect x="250" y="150" width="60" height="20" rx="10" fill="rgba(255,255,255,0.2)"/>
  <text x="280" y="162" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="10" font-weight="bold">Threading</text>
