    <path d="M20 25 L25 20 L25 40 L20 35 Z" fill="#667eea"/>
    <path d="M15 22 Q12 25 15 28" stroke="#667eea" stroke-width="2" fill="none"/>
    <path d="M15 18 Q10 25 15 32" stroke="#667eea" stroke-width="2" fill="none"/>
