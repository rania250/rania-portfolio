  <rect x="300" y="215" width="20" height="15" rx="2" fill="#4a4a6a"/>

  <!-- Title -->
  <text x="200" y="30" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="18" font-weight="bold">Lecteur d'Écran</text>
